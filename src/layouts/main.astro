---
import "../styles/global.css";

import "@fontsource/pacifico";
import "@fontsource-variable/bitter";
import { ViewTransitions } from "astro:transitions";

const formFieldClasses = "p-2 rounded";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Chris Griffing: Voice Acting</title>
    <link
      rel="icon"
      href="https://chrisgriffing.com/favicon-32x32.png"
      type="image/png"
    />
  </head>
  <body class="font-body px-8 pt-2">
    <header class="custom-container">
      <div class="flex-row">
        <a
          href="/"
          class="font-display text-[4em] mb-[-22px] block text-heading hover:text-link"
        >
          Chris Griffing
        </a>
      </div>
      <div
        class="text-center text-heading border-t-[5px] border-t-gray-700 border-b-[1px] border-b-[#e5e5e5] text-[1.84615em] pt-[18px] px-[24px] pb-[20px]"
      >
        Aspiring Voice Actor and Mediocre Impressionist
      </div>
    </header>

    <main class="custom-container !pt-8">
      <slot />
    </main>
    <section
      class="flex flex-col gap-2 mt-12 max-w-[24rem] mx-auto items-center"
    >
      <h2 class="text-2xl font-bold">Interested in working together?</h2>
      <p class="text-sm px-2">
        I would love to work on all sorts of projects from games to ebooks and
        more. Send me a message and I will get back to you as soon as I can.
      </p>
      <form class="flex flex-col gap-4">
        <div class="flex gap-2">
          <div class="flex flex-col gap-1">
            <label class="" for="contact-form-name"> Name </label>
            <input
              id="contact-form-name"
              placeholder="Arthur Dent"
              class={`${formFieldClasses}`}
              required
            />
          </div>
          <div class="flex flex-col gap-1">
            <label class="" for="contact-form-email"> Email </label>
            <input
              type="email"
              id="contact-form-email"
              placeholder="arthur.dent@hh2g.com"
              class={`${formFieldClasses}`}
              required
            />
          </div>
        </div>

        <div class="flex flex-col gap-1">
          <label class="" for="contact-form-description"> Description </label>
          <textarea
            id="contact-form-description"
            placeholder="Tell me a bit about your project and what you have in mind."
            class={`${formFieldClasses}`}
            required></textarea>
        </div>

        <div class="flex justify-end">
          <button>Send</button>
        </div>
      </form>
    </section>
    <footer class="flex flex-col items-center p-12">
      <span class="">&copy;{new Date().getFullYear()} Chris Griffing</span>
    </footer>
  </body>
  <ViewTransitions />
</html>
